<?xml version="1.0" encoding="UTF-8"?>
<sbe:messageSchema xmlns:sbe="http://fixprotocol.io/2016/sbe"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    package="command"
    id="6"
    version="0"
    semanticVersion="5.2"
    description="Schema for tensor messages"
    byteOrder="littleEndian">
    <xi:include href="common-types.xml" />
    <sbe:message name="CommandMessage"
        id="7"
        description="A command">
        <field name="header"
            id="1"
            type="SpidersMessageHeader" />
        <field name="command"
            id="2"
            description="Command name"
            type="Command" />
        <field name="format"
            id="3"
            description="data format for value"
            type="uint32" />
        <data name="value"
            id="4"
            description="Byte buffer containing value of type format"
            type="varDataEncoding" />
    </sbe:message>

     <sbe:message name="CommitMessage"
        id="8"
        description="Commit any pending commands">
        <field name="header"
            id="1"
            type="SpidersMessageHeader" />
    </sbe:message>

    <sbe:message name="StatusMessage"
        id="9"
        description="A status message emitted in response to a command">
        <field name="header"
            id="1"
            type="SpidersMessageHeader" />
        <field name="errorCode"
            id="5"
            description="Error code"
            type="uint8" />
        <field name="responseMessage"
            id="6"
            description="text response"
            type="ResponseText"/>
    </sbe:message>

</sbe:messageSchema>