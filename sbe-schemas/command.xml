<?xml version="1.0" encoding="UTF-8"?>
<sbe:messageSchema xmlns:sbe="http://fixprotocol.io/2016/sbe"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    package="command"
    id="6"
    version="0"
    semanticVersion=""
    description="Schema for command messages"
    byteOrder="littleEndian">
    <xi:include href="common-types.xml" />
    <types>
        <enum name="ValueFormat" decscription="Value Format" encodingType="int32">
            <validValue name="ValueFormatNumber">1</validValue>
            <validValue name="ValueFormatString">2</validValue>
            <validValue name="ValueFormatMessage">3</validValue>
        </enum>
    </types>
    <sbe:message name="CommandMessage"
        id="1"
        description="Command Message Format">
        <field name="header"
            id="1"
            type="SpidersMessageHeader" />
        <field name="command"
            id="2"
            description="Command name"
            type="Command" />
        <field name="format"
            id="3"
            description="Data format for value"
            type="ValueFormat" />
        <data name="value"
            id="20"
            description="Byte buffer containing value of type format"
            type="varDataEncoding" />
    </sbe:message>
    <sbe:message name="CommitMessage"
        id="2"
        description="Commit any pending commands">
        <field name="header"
            id="1"
            type="SpidersMessageHeader" />
    </sbe:message>
    <sbe:message name="StatusMessage"
        id="3"
        description="A status message emitted in response to a command">
        <field name="header"
            id="1"
            type="SpidersMessageHeader" />
        <field name="errorCode"
            id="5"
            description="Error code"
            type="uint8" />
        <field name="responseMessage"
            id="6"
            description="text response"
            type="ResponseText" />
    </sbe:message>
</sbe:messageSchema>