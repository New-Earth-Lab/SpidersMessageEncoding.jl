<?xml version="1.0" encoding="UTF-8"?>
<sbe:messageSchema xmlns:sbe="http://fixprotocol.io/2016/sbe"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    package="chunk"
    id="3"
    version="0"
    semanticVersion="5.2"
    description="Schema for chunked messages"
    byteOrder="littleEndian">
    <xi:include href="common-types.xml" />
    <sbe:message name="ChunkHeader"
        id="1"
        description="Chunk header message format">
        <field name="channelRcvTimestampNs"
            id="1"
            description="Timestamp of received message"
            type="TimestampNs" />
        <field name="channelSndTimestampNs"
            id="2"
            description="Timestamp of message sent"
            type="TimestampNs" />
        <field name="timestamp"
            id="3"
            description="Message Timestamp"
            type="TimestampNs" />
        <field name="correlationId"
            id="10"
            description="Unique number for the chunked transmission"
            type="CorrelationId" />
        <field name="length"
            id="11"
            description="Length of data"
            type="uint64" />
        <data name="metadata"
            id="20"
            description="Metadata"
            type="varAsciiEncoding" />

    </sbe:message>
    <sbe:message name="ChunkData"
        id="2"
        description="Chunk data message format">
        <field name="channelRcvTimestampNs"
            id="1"
            description="Timestamp of received message"
            type="TimestampNs" />
        <field name="channelSndTimestampNs"
            id="2"
            description="Timestamp of message sent"
            type="TimestampNs" />
        <field name="timestamp"
            id="3"
            description="Message Timestamp"
            type="TimestampNs" />
        <field name="correlationId"
            id="10"
            description="Unique number for the chunked transmission"
            type="CorrelationId" />
        <field name="offset"
            id="11"
            description="Offset in bytes of destination in assembled buffer"
            type="uint64" />
        <data name="chunk"
            id="20"
            description="Byte buffer containing chunk data"
            type="varDataEncoding" />
    </sbe:message>
</sbe:messageSchema>